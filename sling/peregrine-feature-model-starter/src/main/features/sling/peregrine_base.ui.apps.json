{
  "id":"${project.groupId}:${project.artifactId}:slingosgifeature:base.ui.apps:${project.version}",
  "description":"JCR Package for the Peregrine CMS Platform including\n        the Platform Core bundle.",
  "bundles":[
    {
      "id":"com.peregrine-cms:base.core:1.0-SNAPSHOT",
      "start-order":"20"
    }
  ],
  "configurations":{
    "com.peregrine.transform.ImageTransformationSetup~greyThumbnailPng":{
      "setupName":"greyThumbnail.png",
      "imageTransformationConfigurations":[
        "transformation=vips:thumbnail|width=100|height=100",
        "transformation=vips:greyscale"
      ]
    },
    "com.peregrine.transform.ImageTransformationSetup~smallPng":{
      "setupName":"small.png",
      "imageTransformationConfigurations":[
        "transformation=vips:thumbnail|width=200|height=200"
      ]
    },
    "com.peregrine.transform.ImageTransformationSetup~thumbnailNoCropPng":{
      "setupName":"thumbnail.no.crop.png",
      "imageTransformationConfigurations":[
        "transformation=vips:thumbnail|width=100|height=100|noCrop=true"
      ]
    },
    "com.peregrine.transform.ImageTransformationSetup~thumbnailPng":{
      "setupName":"thumbnail.png",
      "imageTransformationConfigurations":[
        "transformation=vips:thumbnail|width=100|height=100"
      ]
    },
    "org.apache.sling.commons.log.LogManager.factory.config~peregrine":{
      "org.apache.sling.commons.log.pattern":"{0,date,yyyy-MM-dd HH:mm:ss.SSS} {4} [{3}] {5}",
      "org.apache.sling.commons.log.names":[
        "com.peregrine"
      ],
      "org.apache.sling.commons.log.level":"info",
      "org.apache.sling.commons.log.file":"logs/peregrine.cms.log"
    },
    "org.apache.sling.engine.impl.auth.SlingAuthenticator":{
      "auth.sudo.cookie":"sling.sudo",
      "auth.annonymous":"false",
      "sling.auth.requirements":[
        "-/perapi/admin/access",
        "-/system/sling/login",
        "-/system/sling/info",
        "-/content/sites",
        "-/content/assets",
        "-/content/templates",
        "-/etc/felibs",
        "-/favicon.ico",
        "-/content/apidocs"
      ],
      "osgi.http.whiteboard.listener":"true",
      "auth.sudo.parameter":"sudo",
      "auth.http":"preemtive",
      "auth.uri.suffix":"/j_security_check",
      "auth.http.realm":"peregrine cms",
      "osgi.http.whiteboard.context.select":"(osgi.http.whiteboard.context.name=*)"
    }
  },
  "content-packages:ARTIFACTS|true":[
    "com.peregrine-cms:base.ui.apps:zip:cp2fm-converted:1.0-SNAPSHOT"
  ]
}